<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18.0dp"
            android:layout_marginBottom="7.0dp"
            android:text="Today"
            android:textColor="@color/white"
            android:textSize="22.0sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTaskStarted"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5.0dp"
            android:layout_below="@+id/txt1"
            android:layout_marginVertical="10.0dp"
            android:layout_marginBottom="10.0dp"
            tools:listitem="@layout/item_my_reminder" />

        <ImageView
            android:id="@+id/imgAddTask"
            android:layout_width="55.0dp"
            android:layout_height="55.0dp"
            android:elevation="7.0dp"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="22.0dp"
            android:background="@drawable/gradiant_yelow"
            android:padding="10.0dp"
            android:src="@drawable/ic_add" />

    </RelativeLayout>

</RelativeLayout>